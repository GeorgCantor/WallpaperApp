<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailsLayout"
    style="@style/AppDetailTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDetailPrimaryDark"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            style="@style/AppDetailTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".view.activity.DetailsActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/unstarAnimationView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:lottie_fileName="unstar.json" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/starAnimationView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:lottie_fileName="star.json" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/progressAnimationView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:lottie_fileName="loading.json" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/downloadAnimationView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:lottie_fileName="download.json"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/detailImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_6"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/detail_image" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/tagsCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="@dimen/card_elevation_small"
                    app:cardUseCompatPadding="true">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tagsRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:scrollbars="horizontal" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="@dimen/card_elevation_small"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/userImageView"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginLeft="@dimen/margin_16"
                            android:layout_marginTop="@dimen/margin_16"
                            android:layout_marginRight="@dimen/margin_16"
                            android:layout_marginBottom="@dimen/margin_12"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/user_name" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:layout_marginTop="@dimen/margin_6"
                            android:layout_marginRight="@dimen/margin_20"
                            android:fontFamily="cursive"
                            android:padding="@dimen/text_padding_4"

                            android:text="@string/by"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_20" />

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_6"
                            android:fontFamily="cursive"
                            android:padding="@dimen/text_padding_4"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_20"
                            tools:text="Alex" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/similarTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="cursive"
                    android:text="@string/similar_images"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/similarCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="@dimen/card_elevation_small"
                    app:cardUseCompatPadding="true">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/similarProgressAnimView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:lottie_fileName="loading.json" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/similarRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:overScrollMode="never"
                        tools:context=".view.activity.DetailsActivity" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="@dimen/card_elevation_small"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_12"
                                android:layout_marginTop="@dimen/margin_6"
                                android:layout_marginRight="@dimen/margin_12"
                                android:layout_marginBottom="@dimen/margin_6"
                                android:fontFamily="cursive"
                                android:padding="@dimen/text_padding_4"
                                android:text="@string/downloads"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/downloadsTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_4"
                                android:layout_marginTop="@dimen/margin_6"
                                android:layout_marginRight="@dimen/margin_4"
                                android:layout_marginBottom="@dimen/margin_6"
                                android:fontFamily="cursive"
                                android:padding="@dimen/text_padding_4"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_16"
                                tools:text="3456" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_12"
                                android:layout_marginTop="@dimen/margin_6"
                                android:layout_marginRight="@dimen/margin_12"
                                android:layout_marginBottom="@dimen/margin_6"
                                android:fontFamily="cursive"
                                android:padding="@dimen/text_padding_4"
                                android:text="@string/favourite"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/favoritesTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_4"
                                android:layout_marginTop="@dimen/margin_6"
                                android:layout_marginRight="@dimen/margin_4"
                                android:layout_marginBottom="@dimen/margin_6"
                                android:fontFamily="cursive"
                                android:padding="@dimen/text_padding_4"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_16"
                                tools:text="5459" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/fabSetWall"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_fullscreen" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSetWall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/fab"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_wallpaper" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>