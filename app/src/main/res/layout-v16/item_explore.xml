<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/explore_item_height"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/explore_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/explore_item"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/scrim_30percent" />

        <TextView
            android:id="@+id/exptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:textColor="@color/colorDetailPrimary"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

    </FrameLayout>
</android.support.v7.widget.CardView>