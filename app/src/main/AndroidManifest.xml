<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.georgcantor.wallpaperapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission-sdk-23 android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_gelik"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_gelik"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.PicDetailActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_detail_name"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.SelectCatActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_detail_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.LicenseActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_detail_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.FetchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_detail_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.SearchActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.AboutActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_about_the_app"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.FavoriteActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>